<!-- order section starts  -->

<section class="order" id="order">

    <h1 class="heading"> <span>order</span> now </h1>

    <div class="row">

        <div class="image">
            <img src="images/order-img.jpg" alt="">
        </div>

        <form action="<%= RouterDictionary.TRANSACTION_CREATE %>" method="post">

            <div class="inputBox">
                <input type="text" placeholder="Name" name="<%= QueryDictionary.USER_NAME %>" required>
                <input type="email" placeholder="Email" name="<%= QueryDictionary.USER_EMAIL %>" required>
            </div>

            <div class="inputBox">
                <input type="number" placeholder="Phone Number" name="<%= QueryDictionary.USER_PHONE_NUMBER %>" required>
                <select placeholder="default-aria-example" id="product" name="<%= QueryDictionary.PRODUCT %>" required>
                    <% for (let i = 0; i < productsLength; i++) { %>
                        <option value="<%= products[i].ID %>"><%= products[i].Name %></option>
                    <% } %>
                </select>
            </div>

            <div class="inputBox">
                <select placeholder="default-aria-example" id="product" name="<%= QueryDictionary.PAYMENT %>" required>
                    <% for (let i = 0; i < paymentsLength; i++) { %>
                        <option value="<%= payments[i].ID %>"><%= payments[i].Name %></option>
                    <% } %>
                </select>
                <input type="text" placeholder="Address" name="<%= QueryDictionary.USER_ADDRESS %>" id="address" required>
            </div>

            <input type="submit" value="order now" class="btn">

        </form>

    </div>

</section>

<!-- order section ends -->